<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ruu.springmvcxml.mapper.TodoMapper">
  <select id="getTime" resultType="java.lang.String">
    select now()
  </select>
  <insert id="insert">
    insert into tbl_todo
      (title, dueDate, writer)
    values
      (#{title}, #{dueDate}, #{writer})
  </insert>

  <select id="selectAll" resultType="org.ruu.springmvcxml.domain.TodoEntity">
    select
      tno,
      title,
      dueDate,
      writer,
      finished
    from
      tbl_todo
  </select>

  <select id="selectOne" parameterType="java.lang.Long"
    resultType="org.ruu.springmvcxml.domain.TodoEntity">
    select
      tno,
      title,
      dueDate,
      writer,
      finished
    from
      tbl_todo
    where
      tno = #{tno}
  </select>
</mapper>